<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pranav.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pranav.myapplication.LoanPage"
            android:label="@string/app_name"
            android:parentActivityName="com.example.pranav.myapplication.HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pranav.myapplication.HomePage" />
        </activity>
        <activity
            android:name="com.example.pranav.myapplication.HomePage"
            android:label="@string/app_name"
            android:parentActivityName="com.example.pranav.myapplication.MainPage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pranav.myapplication.MainPage" />
        </activity>
        <activity
            android:name="com.example.pranav.myapplication.BorrowPage"
            android:label="@string/app_name"
            android:parentActivityName="com.example.pranav.myapplication.HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pranav.myapplication.HomePage" />
        </activity>
        <activity
            android:name="com.example.pranav.myapplication.TransactionPage"
            android:label="@string/app_name"
            android:parentActivityName="com.example.pranav.myapplication.HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pranav.myapplication.HomePage" />
        </activity>
        <activity
            android:name="com.example.pranav.myapplication.HistoryPage"
            android:label="@string/app_name"
            android:parentActivityName="com.example.pranav.myapplication.HomePage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pranav.myapplication.HomePage" />
        </activity>
    </application>

</manifest>
